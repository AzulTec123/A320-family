	<!-- Transfer -->
	<animation>
		<type>pick</type>
		<object-name>radio_exchange</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>rmp.transfer(1);</script>
				<condition>
					<and>
						<greater-than-equals>
							<property>systems/electrical/bus/dc-ess</property>
