<PropertyList>
	<name>A320-200-IAE</name>
	<path>empty.ac</path> <!-- Livery system on MP multimodel -->

	<model>
		<name>A320</name>
		<path>Aircraft/A320-family/Models/A320-common.xml</path>
	</model>
	
	<model>
		<name>EnginesIAE</name>
		<path>Aircraft/A320-family/Models/Fuselage/a320.v2500.xml</path>
	</model>

	<animation>
		<type>material</type>
		<object-name>EngineIAEV2500L</object-name>
		<object-name>EngineIAEV2500R</object-name>
		<object-name>ReverserLDoor</object-name>
		<object-name>ReverserRDoor</object-name>
		<object-name>PylonIAEV2500L</object-name>
		<object-name>PylonIAEV2500R</object-name>
		<object-name>IntakeIAEV2500L</object-name>
		<object-name>IntakeIAEV2500R</object-name>
		<property-base>sim/model/livery/</property-base>
		<texture-prop>texture-engine</texture-prop>
		<texture>engine-IAE-V2500.png</texture>
	</animation>

	<animation>
		<type>material</type>
		<object-name>EngineIAEV2500L.Placards</object-name>
		<property-base>sim/model/livery/</property-base>
		<texture-prop>texture-placards</texture-prop>
		<texture>placards.png</texture>
	</animation>
	
	<!-- Nasal code -->
	<nasal>
		<load>
			var livery_update = aircraft.livery_update.new("Aircraft/A320-family/Models/Liveries/A320/IAE");
		</load>
		<unload>
			livery_update.stop();
		</unload>
	</nasal>
</PropertyList>
